<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Services">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:contentInsetStart="0dp"
        tools:ignore="MissingConstraints">

        <include
            android:id="@+id/include"
            layout="@layout/activity_tool_bar"
            />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:paddingBottom="20dp"
            android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="5dp">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="200dp"
                            app:srcCompat="@drawable/ser_1" />

                        <LinearLayout
                            android:layout_width="340dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="-25dp"
                            android:layout_marginBottom="10dp"

                            android:layout_gravity="center|bottom"
                            android:elevation="5dp"
                            android:orientation="vertical"
                            android:background="@drawable/rounded_corner">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/purple_700"
                                android:paddingHorizontal="15dp"
                                android:paddingVertical="5dp"
                                android:textSize="18dp"
                                android:layout_gravity="center|bottom"
                                android:text="Marshal Electric Company" />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20dp"
                                    android:background="@drawable/green_corner_radius">
                                    <ImageView
                                        android:id="@+id/imageView6"
                                        android:layout_width="30dp"
                                        android:layout_height="14dp"
                                        android:layout_gravity="center"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:srcCompat="@drawable/ic_eye_icon_foreground" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12dp"
                                        android:paddingRight="10dp"
                                        android:textColor="@color/white"
                                        android:layout_gravity="center|bottom"
                                        android:text="20" />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/yellow_corner_radius">
                                    <ImageView
                                        android:id="@+id/imageView6"
                                        android:layout_width="30dp"
                                        android:layout_height="14dp"
                                        android:layout_gravity="center"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:srcCompat="@drawable/ic_share_icon_foreground" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12dp"
                                        android:paddingRight="10dp"
                                        android:textColor="@color/white"
                                        android:layout_gravity="center|bottom"
                                        android:text="Share" />

                                </LinearLayout>



                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="15dp"
                                android:paddingVertical="5dp"
                                android:layout_marginBottom="5dp"
                                android:textSize="15dp"
                                android:text="124, Temple Road, Dankotuwa, Mathara." />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/unitedServiceIMG"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/ser_2" />

                    <LinearLayout
                        android:id="@+id/unitedServiceTXT"
                        android:layout_width="340dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-25dp"
                        android:layout_marginBottom="10dp"

                        android:layout_gravity="center|bottom"
                        android:elevation="5dp"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_corner">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/purple_700"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="5dp"
                            android:textSize="18dp"
                            android:layout_gravity="center|bottom"
                            android:text="United Communication Services" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/green_corner_radius">
                                <ImageView
                                    android:id="@+id/imageView6"
                                    android:layout_width="30dp"
                                    android:layout_height="14dp"
                                    android:layout_gravity="center"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:srcCompat="@drawable/ic_eye_icon_foreground" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:paddingRight="10dp"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center|bottom"
                                    android:text="60" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/yellow_corner_radius">
                                <ImageView
                                    android:id="@+id/imageView6"
                                    android:layout_width="30dp"
                                    android:layout_height="14dp"
                                    android:layout_gravity="center"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:srcCompat="@drawable/ic_share_icon_foreground" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:paddingRight="10dp"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center|bottom"
                                    android:text="Share" />

                            </LinearLayout>



                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="5dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="15dp"
                            android:text="4th floor, Wijeramaya, Colombo 07. " />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/ser_3" />

                    <LinearLayout
                        android:layout_width="340dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-25dp"
                        android:layout_marginBottom="10dp"

                        android:layout_gravity="center|bottom"
                        android:elevation="5dp"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_corner">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/purple_700"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="5dp"
                            android:textSize="18dp"
                            android:layout_gravity="center|bottom"
                            android:text="S-lon Lanka (Pvt) Ltd" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/green_corner_radius">
                                <ImageView
                                    android:id="@+id/imageView6"
                                    android:layout_width="30dp"
                                    android:layout_height="14dp"
                                    android:layout_gravity="center"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:srcCompat="@drawable/ic_eye_icon_foreground" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:paddingRight="10dp"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center|bottom"
                                    android:text="70" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/yellow_corner_radius">
                                <ImageView
                                    android:id="@+id/imageView6"
                                    android:layout_width="30dp"
                                    android:layout_height="14dp"
                                    android:layout_gravity="center"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:srcCompat="@drawable/ic_share_icon_foreground" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:paddingRight="10dp"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center|bottom"
                                    android:text="Share" />

                            </LinearLayout>



                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="5dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="15dp"
                            android:text="No. 515/7, T. B. Jayah Mawatha, Colombo 1." />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>